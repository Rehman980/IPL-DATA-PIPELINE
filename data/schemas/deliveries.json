{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "match_id": {
            "type": "integer"
        },
        "inning": {
            "type": "integer",
            "minimum": 1,
            "maximum": 2
        },
        "over": {
            "type": "integer",
            "minimum": 1,
            "maximum": 20
        },
        "ball": {
            "type": "integer",
            "minimum": 1,
            "maximum": 6
        },
        "batsman": {
            "type": "string"
        },
        "non_striker": {
            "type": "string"
        },
        "bowler": {
            "type": "string"
        },
        "batsman_runs": {
            "type": "integer",
            "minimum": 0,
            "maximum": 6
        },
        "extra_runs": {
            "type": "integer",
            "minimum": 0
        },
        "total_runs": {
            "type": "integer",
            "minimum": 0
        }
    },
    "required": [
        "match_id",
        "inning",
        "over",
        "ball",
        "batsman",
        "bowler"
    ]
}