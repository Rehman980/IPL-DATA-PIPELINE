{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "match_id": {
            "type": "integer"
        },
        "season": {
            "type": "string"
        },
        "date": {
            "type": "string",
            "format": "date"
        },
        "team1": {
            "type": "string"
        },
        "team2": {
            "type": "string"
        },
        "toss_winner": {
            "type": "string"
        },
        "toss_decision": {
            "type": "string",
            "enum": [
                "field",
                "bat"
            ]
        },
        "result": {
            "type": "string"
        },
        "winner": {
            "type": [
                "string",
                "null"
            ]
        },
        "venue": {
            "type": "string"
        }
    },
    "required": [
        "match_id",
        "date",
        "team1",
        "team2",
        "venue"
    ]
}